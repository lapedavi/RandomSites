@model int?
@{
    ViewData["Title"] = "Random Number";
}

<h1>Random Number Generator</h1>
<p>Generates a number greater than or equal to the minimum value, and less than or equal to maximum value</p>
<a asp-action="Index">Back to Index</a>

<form asp-action="RandomNumber">
    <div>
        <label for="minValue">Minimum Number:</label>
        <input type="number" name="minValue" required/>
    </div>

    <div>
        <label for="maxValue">Maximum Number:</label>
        <input type="number" name="maxValue" required/>
    </div>

    <div>
        <input type="submit" value="Generate" />
    </div>
</form>

@if (Model != null) {
    <h3>Random Number: @Model</h3>
}
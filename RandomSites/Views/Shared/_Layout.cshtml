<!DOCTYPE html>
@{
    List<Message> AllMessages = null;
    if (TempData["Messages"] != null) {
        AllMessages = Messages.Deserialize((List<string>)TempData["Messages"]);
    }
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RandomSites</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/GeneralStyles.css" />
</head>
<body>
    <header>
        <nav>
            <a class="brand" asp-controller="Home" asp-action="Sites">RandomSites</a>
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </nav>
        @if (AllMessages != null && AllMessages.Count > 0) {
            <ul class="messages">
                @foreach (Message msg in AllMessages) {
                    <li class="message @msg.Type">@msg.MessageString</li>
                }
            </ul>
        }
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer>
        &copy; 2021 - RandomSites - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
